<section class="remove-when-searching">
  <h2>Login</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div>
      <%= f.label :login, "Username or E-Mail" %><br />
      <%= f.text_field :login %> <%= "<span class='error'>#{resource.errors[:login][0]}</span>".html_safe if resource.errors[:login][0] %>
    </div>

    <div>
      <%= f.label :password %><br />
      <%= f.password_field :password %> <%= "<span class='error'>#{resource.errors[:password][0]}</span>".html_safe if resource.errors[:password][0] %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class='remember-me'><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in" %></div>
  
    <%= render :partial => "devise/shared/links" %>
  <% end %>
</section>